#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

struct Node* createNode(int data) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = data;
    newNode->next = NULL;
    return newNode;
}

void insertEnd(struct Node** head, int data) {
    struct Node* newNode = createNode(data);
    if (*head == NULL) {
        *head = newNode;
        return;
    }
    struct Node* temp = *head;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = newNode;
}

void printList(struct Node* head) {
    while (head != NULL) {
        printf("%d->", head->data);
        head = head->next;
    }
    printf("NULL\n");
}

void sortList(struct Node* head) {
    struct Node* i, *j;
    int temp;
    for (i = head; i != NULL; i = i->next) {
        for (j = i->next; j != NULL; j = j->next) {
            if (i->data > j->data) {
                temp = i->data;
                i->data = j->data;
                j->data = temp;
            }
        }
    }
}

struct Node* reverseList(struct Node* head) {
    struct Node* prev = NULL;
    struct Node* current = head;
    struct Node* next = NULL;
    while (current != NULL) {
        next = current->next;
        current->next = prev;
        prev = current;
        current = next;
    }
    return prev;
}

struct Node* concatenate(struct Node* list1, struct Node* list2) {
    if (list1 == NULL) return list2;
    struct Node* temp = list1;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = list2;
    return list1;
}

int main() {
    struct Node* list1 = NULL;
    struct Node* list2 = NULL;
    int n1, n2, data;

    printf("Create List 1:\nEnter number of nodes: ");
    scanf("%d", &n1);
    for (int i = 0; i < n1; i++) {
        printf("Enter data: ");
        scanf("%d", &data);
        insertEnd(&list1, data);
    }

    printf("\nCreate List 2:\nEnter number of nodes: ");
    scanf("%d", &n2);
    for (int i = 0; i < n2; i++) {
        printf("Enter data: ");
        scanf("%d", &data);
        insertEnd(&list2, data);
    }

    printf("\nList 1: ");
    printList(list1);
    printf("List 2: ");
    printList(list2);

    sortList(list1);
    printf("\nList 1 After sorting: ");
    printList(list1);

    list1 = reverseList(list1);
    printf("List1, After Reversing: ");
    printList(list1);

    struct Node* concatenated = concatenate(list1, list2);
    printf("After concatenation (list1 + list2): ");
    printList(concatenated);

    return 0;
}
